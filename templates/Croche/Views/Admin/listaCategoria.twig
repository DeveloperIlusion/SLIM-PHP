{# listaCategoria.twig #}

{% extends "/Layouts/layout.twig" %}

{% block content %}


<script type="text/javascript" src="/Assets/DataTables/datatables.min.js"></script>

<div class="container mt-5 mb-5">
    <div class="justify-content-center mx-auto my-auto p-3">
        {{ insertButton | raw }}
    </div>

    <table id="tblListaCategoria" class="table table-dark table-striped table-hover table-borderless crudLogin-table mt-4 table-responsive">
        <thead>
            <tr>
                <th class="col-2">Título</th>
                <th class="col-5">Descrição</th>
                <th class="col-1">Status</th>
                <th class="col-4">Controles</th>
            </tr>
        </thead>
        <tbody>
            {% for blog in data %}
                <tr>
                    <td class="col-2">{{ blog.Categoria }}</td>
                    <td class="col-5">{{ blog.Descricao }}</td>
                    <td class="col-1">{% if blog.Status == 1 %}Ativo{% else %}Inativo{% endif %}</td>
                    <td class="col-4">
                        <a href="/visualize/{{ blog.id }}" title="Visualização" class="btn btn-outline-danger"><i class="fa fa-eye"></i></a>&nbsp;&nbsp;
                        <a href="/update/{{ blog.id }}" title="Alteração" class="btn btn-outline-danger"><i class="fa fa-file"></i></a>&nbsp;&nbsp;
                        <a href="/delete/{{ blog.id }}" title="Exclusão" class="btn btn-outline-danger"><i class="fa fa-trash"></i></a>&nbsp;&nbsp;
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>

{% endblock content %}
